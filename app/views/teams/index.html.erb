<h1>Tabelle</h1>
<table class="table">
  <thead>
    <tr>
      <th style="width: 0.5em;">Position</th>
      <th>Name</th>
      <th>Wins</th>
      <th>Draws</th>
      <th>Defeats</th>
      <th>Goals scored</th>
      <th>Goals conceded</th>
      <th>Goaldifference</th>
      <th>Points</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @teams.each do |team| %>
      <tr>
        <td><%= team.position %></td>
        <td style="vertical-align: middle"><img src="assets/logos/<%= team.id%>.png" style="width: 2em"/>&nbsp;<%= team.name %></td>
        <td><%= team.wins %></td>
        <td><%= team.draws %></td>
        <td><%= team.defeats %></td>
        <td><%= team.goals_scored %></td>
        <td><%= team.goals_conceded %></td>
        <td><%= team.goaldifference %></td>
        <td style="color: dodgerblue; font-style: oblique"><%= team.points %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
