<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Home team</th>
      <th>Home score</th>
      <th>Visitor team</th>
      <th>Visitor score</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.time %></td>
        <td><%= match.home_team %></td>
        <td><%= match.home_score %></td>
        <td><%= match.visitor_team %></td>
        <td><%= match.visitor_score %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

